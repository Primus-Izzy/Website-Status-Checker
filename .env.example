# Website Status Checker - Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment: development, staging, or production
ENV=development

# Enable debug mode (DO NOT enable in production!)
DEBUG=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name
APP_NAME=Website Status Checker

# Application version
APP_VERSION=1.0.0

# Secret key for sessions and security (CHANGE THIS IN PRODUCTION!)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Admin API key for managing API keys (REQUIRED FOR PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ADMIN_API_KEY=

# =============================================================================
# WEB GUI SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 allows external access, 127.0.0.1 is localhost only)
HOST=0.0.0.0

# Server port
PORT=8000

# Number of worker processes (recommended: number of CPU cores)
WORKERS=1

# Enable auto-reload for development (disable in production)
RELOAD=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# For production, specify exact domains only (NO wildcards!)
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Allow credentials in CORS requests
ALLOW_CREDENTIALS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum upload size in megabytes
MAX_UPLOAD_SIZE_MB=100

# Upload directory path (relative or absolute)
UPLOAD_DIR=gui/uploads

# Export directory path (relative or absolute)
EXPORT_DIR=gui/exports

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable rate limiting (recommended for production)
RATE_LIMIT_ENABLED=true

# Maximum upload requests per minute per IP
RATE_LIMIT_UPLOADS_PER_MINUTE=100

# Maximum total requests per hour per IP
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# Default SSL certificate verification setting
# Set to false only for testing with sites that have invalid certificates
# WARNING: Disabling SSL verification is a security risk!
SSL_VERIFY_DEFAULT=true

# =============================================================================
# CHECKER CONFIGURATION
# =============================================================================

# Default maximum concurrent requests (1-10000)
DEFAULT_CONCURRENT=100

# Default request timeout in seconds (1-300)
DEFAULT_TIMEOUT=10

# Default number of retry attempts (0-10)
DEFAULT_RETRY_COUNT=2

# Default retry delay in seconds
DEFAULT_RETRY_DELAY=1.0

# Default exponential backoff factor
DEFAULT_BACKOFF_FACTOR=1.5

# Default batch size for processing (1-100000)
DEFAULT_BATCH_SIZE=1000

# Default save interval (save every N batches)
DEFAULT_SAVE_INTERVAL=10

# Enable memory-efficient processing
MEMORY_EFFICIENT=true

# Include inactive websites in output by default
INCLUDE_INACTIVE=true

# Include error websites in output by default
INCLUDE_ERRORS=false

# Progress file location
PROGRESS_FILE=website_check_progress.json

# Custom user agent (optional)
# USER_AGENT=CustomBot/1.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: text or json (use json for production)
LOG_FORMAT=text

# Log file path (empty for stdout only)
LOG_FILE=

# =============================================================================
# DATABASE CONFIGURATION (Future Feature)
# =============================================================================

# Database URL for job persistence
# SQLite example: sqlite:///./jobs.db
# PostgreSQL example: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./jobs.db

# =============================================================================
# JOB MANAGEMENT
# =============================================================================

# Hours to retain completed jobs before cleanup
JOB_RETENTION_HOURS=24

# Maximum number of concurrent processing jobs
MAX_CONCURRENT_JOBS=10

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Enable security headers (recommended for production)
ENABLE_SECURITY_HEADERS=true

# =============================================================================
# ERROR TRACKING (Optional)
# =============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Sentry environment name
# SENTRY_ENVIRONMENT=production

# Sentry traces sample rate (0.0 to 1.0)
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# NOTES FOR PRODUCTION DEPLOYMENT
# =============================================================================

# 1. Generate a strong SECRET_KEY using:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. Set ENV=production
#
# 3. Set DEBUG=false
#
# 4. Configure ALLOWED_ORIGINS with your actual domain(s)
#    NEVER use wildcards (*) in production!
#
# 5. Enable SSL_VERIFY_DEFAULT=true (do not disable unless absolutely necessary)
#
# 6. Enable RATE_LIMIT_ENABLED=true to protect against abuse
#
# 7. Set LOG_FORMAT=json for better log parsing
#
# 8. Consider using PostgreSQL instead of SQLite for DATABASE_URL
#
# 9. Enable ENABLE_SECURITY_HEADERS=true
#
# 10. Set up proper monitoring with SENTRY_DSN or similar
